rules_version='2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow users to read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Assessment Sessions - Allow anonymous access by sessionId
    match /assessmentSessions/{sessionId} {
      allow create: if true; // Anyone can create a session
      allow read: if true; // Allow reading by sessionId (for anonymous users)
      allow write: if request.auth != null && 
        (resource.data.userId == request.auth.uid || 
         (resource.data.userId == null && request.resource.data.userId == request.auth.uid)); // Allow claiming anonymous sessions
    }
    
    // Open-Ended Scores - Allow anonymous access by sessionId
    match /openEndedScores/{scoreId} {
      allow create: if true; // Anyone can create scores
      allow read: if true; // Allow reading by sessionId (for anonymous users)
      allow write: if request.auth != null && 
        resource.data.userId == request.auth.uid; // Only authenticated owner can update
    }
    
    // Allow reading of assessment questions (public data)
    match /assessmentQuestions/{questionId} {
      allow read: if true;
    }
  }
}
