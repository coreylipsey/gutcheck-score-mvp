rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Public read for badges only
    match /badges/{path=**} {
      allow read: if true;
      allow write: if request.auth != null; // only signed-in users generate
    }
    // Reports are private by default (signed URLs will be used)
    match /reports/{path=**} {
      allow read, write: if false; // no direct reads
    }
  }
}
